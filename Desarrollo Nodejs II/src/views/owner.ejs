<% include partials/_header_p %>

<style type="text/css">
  
</style>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover" border="3">
        <thead>
          <tr align="center">
            <td>Cedula</td>
            <td>Nombre</td>
            <td>Apellido</td>           
            <td>Acciones</td>
          </tr>
        </thead>
        <tbody align="center">

        <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= data[i].id_propietario %></td>
                <td><%= data[i].name %></td>
                <td><%= data[i].lastname %></td>   
                <td>
                  <a href="/update/<%= data[i].id_propietario %>" class="btn btn-info">Editar</a>
                  <a href="/delete/<%= data[i].id_propietario %>" class="btn btn-danger">Eliminar</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">

        <form action="/add" method="POST">

          <div class="form-group">
            <input type="text" name="id_propietario" placeholder="Cedula" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="name" placeholder="Nombre" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="lastname" placeholder="Apellido" class="form-control">
          </div>
          <div align="center">
              <button type="submit" class="btn btn-success">
               Guardar Propietario
              </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<% include partials/_footer %>