<% include partials/_header_v %>

<div style="margin-left: 630px">
<div class="container mt-5">
  <div class="row">
    <div class="card text-center" style="width: 18rem;">
      <div class="card-body" >
        <form action="/update_vehiculo/<%= data.id_placa %>" method="POST" align="center">
          <div class="form-group">
            <input type="text" name="modelo" value="<%= data.modelo%>" placeholder="Modelo" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="año" value="<%= data.año%>" placeholder="Año" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
                Guardar Vehiculo
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
</div>
